    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "from jsonschema",
            "cargo": {
                "args": [
                    "build",
                    "--package=from_jsonschema",
                    "--bin=from_jsonschema"
                ],
                "filter": {
                    "name": "from_jsonschema",
                    "kind": "bin"
                }
            },
            "args": [
                "${workspaceFolder}/../glTF/specification/2.0/schema/glTF.schema.json",
                "${workspaceFolder}/gltf/src/generated"
            ],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in library 'renderer'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--lib",
                    "--package=renderer"
                ],
                "filter": {
                    "name": "renderer",
                    "kind": "lib"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'sample'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=sample",
                    "--package=sample"
                ],
                "filter": {
                    "name": "sample",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'sample'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=sample",
                    "--package=sample"
                ],
                "filter": {
                    "name": "sample",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        }
    ]
}