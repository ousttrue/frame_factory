{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "(Windows) Launch",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/src/Debug/cpp_sample.exe",
            "args": [
                "${workspaceFolder}/../assets",
                // "${env:GLTF_SAMPLE_MODELS}/2.0/DamagedHelmet/glTF-Binary/DamagedHelmet.glb",
                "${env:GLTF_SAMPLE_MODELS}/2.0/BoxTextured/glTF-Binary/BoxTextured.glb",
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [
                {
                    "name": "PATH",
                    "value": "${env:PATH};${workspaceFolder}//..//rust//target//debug"
                }
            ],
            "console": "integratedTerminal"
        },
   ]
}